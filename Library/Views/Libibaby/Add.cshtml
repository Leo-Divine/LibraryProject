@model Library.Models.BookModel

<h4 class="text-center mt-1">Add a Book</h4>
<h5 class="text-center mb-3">Let's Expand our Collective Knowledge!</h5>
<form asp-action="AddBook" class="d-flex flex-column align-items-center">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row w-75 my-1">
        <div class="col-lg-5">
            <h4><label asp-for="Title" class="control-label"></label></h4>
        </div>
        <div class="col-lg-7">
            <input asp-for="Title" class="form-control" />
        </div>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group row w-75 my-1">
        <div class="col-lg-5">
            <h4><label asp-for="Author" class="control-label"></label></h4>
        </div>
        <div class="col-lg-7">
            <input asp-for="Author" class="form-control" />
        </div>
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="form-group row w-75 my-1">
        <div class="col-lg-5">
            <h4><label asp-for="Genre" class="control-label"></label></h4>
        </div>
        <div class="col-lg-7">
            <input asp-for="Genre" class="form-control" />
        </div>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group row w-75 my-1">
        <div class="col-lg-5">
            <h4><label asp-for="ISBN" class="control-label"></label></h4>
        </div>
        <div class="col-lg-7">
            <input asp-for="ISBN" class="form-control" />
        </div>
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    <a asp-action="Catalogue">Back to List</a>
</form>

